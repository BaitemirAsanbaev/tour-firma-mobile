<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/grey"
    android:layout_marginVertical="20dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/tour_card_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/europe" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tour_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Rome tour" />

        <TextView
            android:id="@+id/tour_card_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Welcome to Italy,  we will explore collissium" />

        <TextView
            android:id="@+id/tour_card_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow"
            android:gravity="end"
            android:text="200$" />

        <Button
            android:id="@+id/tour_card_button"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:backgroundTint="@color/yellow"
            android:text="Info" />
    </LinearLayout>
</LinearLayout>